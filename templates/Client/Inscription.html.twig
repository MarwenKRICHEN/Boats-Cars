{% extends 'baseClient.html.twig' %}
{% block stylesheet %}
    <style>
        #main {
            background: url("{{ asset('design/backSignUp.jpg') }}") no-repeat center center fixed;
            background-size: cover;
        }
    </style>
{% endblock %}

{% block Title %}Inscrivez-vous!{% endblock %}

{% block body_id %}"main"{% endblock %}

{% block body %}

    {% block navbar %}{% endblock %}
    <div class="container rounded " id="connexiondiv">
        <div class="row " style="height: 50%">
            <div class="col-12  text-center">
                <h3 id="ins"> Inscription </h3>
                <h3 style="font-family: Gabriola, Arial, sans-serif"> Bienvenue parmis nous! </h3>
            </div>

        </div>
        <div class="row " style="height: 50%">
            {% for message in app.session.flashBag.get('error') %}
            <div class="col-12  alert alert-danger">
                {{ message }}
            </div>
            {% endfor %}

        </div>


        {{ form_start(formUser, { attr : { 'style' : 'margin: 1.5em; margin-bottom: 1em'  , 'class' : 'row'} }) }}

{#        <form class="row  " style="margin: 1.5em; margin-bottom: 1em">#}

            <div class="col-lg-6 ">

                {{  form_row(formUser.nom , { attr: { 'placeholder' : 'Entrer votre Nom'  }}) }}

                {{  form_row(formUser.prenom , { attr: { 'placeholder' : 'Entrer votre Prénom'  }}) }}

                {{  form_row(formUser.email , { attr: { 'placeholder' : 'monAdresse@e-mail.com'  }}) }}

                {{  form_row(formUser.telephone ,{ attr: { 'placeholder' : '+216 00 000 000'  }}) }}
            </div>
            <div class="col-lg-6 ">

                {{  form_row(formUser.cin ,  { attr: { 'placeholder' : 'Entrer votre CIN'  } , 'label' : 'CIN'}) }}


                {{  form_row(formUser.password ,  { attr: { 'placeholder' : 'Créer un mot de passe'  } , 'label' : 'Mot de passe '}) }}


                {{  form_row(formUser.confirm_password ,  { attr: { 'placeholder' : 'Confirmer votre mot de passe '  } , 'label' : 'Confirmation '}) }}

            </div>


            <div class="col-12 text-center " style="width: 100%">
                <button type="submit" class="btn btn-dark col-2 "> Continuer </button>
            </div>
       {{ form_end(formUser)}}

        <div class="container">
        <div class="container" style="margin: 1em">
            <div class="row justify-content-center ">
                <p >Vous avez deja un compte ? </p>
                <a href="{{ path('connexion') }}" alt="" title="connectez-vous" > Connectez vous.</a>
            </div>
        </div>
    </div>

{% block footer %}{% endblock %}

{% endblock %}
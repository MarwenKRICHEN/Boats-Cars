{% block stylesheet %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

    <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/styling.css') }}">

{% endblock %}
<div class="modal-header" id="beh">
    <h5 class="modal-title" id="exampleModalLabel"> {{ produit.nom }}</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">



            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">

                    {% set i=0 %}
                    {% for pic in produit.images %}
                        {% set i=i+1 %}
                    <div style="text-align: center; padding: 1.5em" class="carousel-item {% if i == 1 %} active {% endif %}">
                        <img class="d-block w-100"  src="{{ asset('/Uploads/Produits/') ~ pic.getURL()}}" style="height: 10em; width: 10em ; border-radius: 5px ;">
                    </div>
                   {% endfor %}
                </div>
                {% if i == 0 %}
                {% else %}
                <a class="carousel-control-prev"  href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
             {% endif %}
            </div>
             <p id="detailsdetails" style="font-size: 25px;color: brown;" > {{ produit.cat }}</p>
             <p id="detailsdetails" > #{{ produit.ref }}</p>
             <p id="detailsdetails" > {% if produit.neuf %}neuf <i class="fas fa-check-circle" style="margin-left: 0.2em ; color: #1c7430"></i>{% else %} occasion {% endif %}</p>


</div>

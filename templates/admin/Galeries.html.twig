{% extends 'base.html.twig' %}
{% block Title %}
Galerie
{% endblock %}
{% block stylesheet %}
<link rel="stylesheet" type="text/css" href="{{ asset('Galerie.css') }}">
{% endblock %}
{% block Body %}
    <div class="container-fluid my-col10">
        <div class="row my-row1">
            <p>Boats & Cars</p>
        </div>
        <div class="row my-row2">
            <div class="col-1"></div>
            <div class="col-2 name">
                Galerie
            </div>
        </div>
        <div class="row my-row3 justify-content-around">
            <div class="col-4">
                <div class="row name justify-content-center">Boats</div>
                <div class="row">
                    <a href="{{path('galerie.bateaux')}}">
                        <img src="{{ asset('img/Boat_img.jpg') }}">
                    </a>
                </div>
                <div class="row name justify-content-end">{{imB}} photos</div>

            </div>
            <div class="col-4">
                <div class="row name justify-content-center">4 x 4</div>
                <div class="row">
                    <a href="{{ path('galerie.4x4') }}">
                        <img src="{{ asset('img/Car_img.jpg') }}">
                    </a>
                </div>
                <div class="row name justify-content-end">{{im4}} photos</div>

            </div>
        </div>
    </div>
{% endblock %}
{% block Script %}
    {{ parent() }}
{% endblock %}
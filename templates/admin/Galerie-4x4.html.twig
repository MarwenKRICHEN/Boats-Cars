{% extends 'base.html.twig' %}
{% block Title %}
    Galerie 4x4
{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" type="text/css" href="{{ asset('Galerie-Bateaux.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('myStyle.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/normalize.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('css/demo.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('css/component.css') }}"/>
    <script>(function (e, t, n) {
            var r = e.querySelectorAll("html")[0];
            r.className = r.className.replace(/(^|\s)no-js(\s|$)/, "$1js$2")
        })(document, window, 0);</script>

{% endblock %}
{% block Body %}
    <div class="container-fluid my-col10" style="padding: 2em; overflow-x: hidden">
        <div class="row">
            <div class="col-12">
                <p class="title">Boats & Cars</p>
            </div>
        </div>
        <div class="row justify-content-between align-items-start">
            <div style="margin-left: 1.8%" class="col-3 path">
                <p>Galerie > 4 X 4</p>
            </div>
            <div class="col-4">
                <p class="nbimg" style="color: black">{{ imgs| length  }} Images</p>
            </div>
        </div>
        <div class="row my-images">
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <div id="box" class="box">
                    <input data-target="{{ path('image4x4.upload') }}" type="file" data="4x4" hidden name="file-5[]" id="file-5"
                           class="inputfile inputfile-4" data-multiple-caption="{count} files selected" multiple/>
                    <label for="file-5">
                        <figure>
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17">
                                <path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/>
                            </svg>
                        </figure>
                        <span>Choisir une image</span></label>
                </div>
            </div>
            {% for img in imgs %}
                <div class="col-lg-3 col-md-4 col-xs-6 thumb profile-pic">
                    <img src="{{ asset('Uploads/4x4/')~img }}" class="zoom img-fluid" alt="">
                    <div class="edit"><a href="#"><i data-target="{{ path('image4x4.delete',{'name':img}) }}" class="fa fa-lg fa-times-circle"></i></a></div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
{% block Script %}
    <script src="{{ asset('js/custom-file-input.js') }}"></script>
    {{ parent () }}
{% endblock %}